+.experimental-option {
+  display: none;
+}
+.experimental-enabled .experimental-option {
+  display: block;
+}
+.experimental-enabled menuitem.experimental-option::before {
+  display: block;
+}
+
+/**
+ * devtools.performance.ui.retro-mode
+ * This is the inverse -- we should only hide these elements if retro-mode is enabled.
+ */
+.retro-option {
+  display: block;
+}
+.retro-mode-enabled .retro-option {
